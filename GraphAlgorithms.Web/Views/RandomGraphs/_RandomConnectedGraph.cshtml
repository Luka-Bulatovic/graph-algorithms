@model RandomConnectedGraphModel

<div class="container w-full grid grid-cols-1 gap-y-4">
    <div class="col-span-full">
        <label asp-for="Nodes" class="form-label"></label>
        <div class="mt-2">
            <input asp-for="Nodes" type="number" name="@(Model.PropertyNamePrefix)Nodes" step="1" class="form-input-field">
        </div>
        <span data-valmsg-for="@(Model.PropertyNamePrefix)Nodes" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
    </div>
    <div class="col-span-full">
        <label asp-for="MinEdgesFactor" class="form-label"></label>
        <div class="mt-2">
            <input asp-for="MinEdgesFactor" type="number" name="@(Model.PropertyNamePrefix)MinEdgesFactor" step="1" class="form-input-field">
        </div>
        <span data-valmsg-for="@(Model.PropertyNamePrefix)MinEdgesFactor" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
    </div>
</div>